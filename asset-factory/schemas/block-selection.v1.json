{
  "$id": "https://yourdomain/schema/llm/block-selection.v1.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "BlockSelection.v1",
  "type": "object",
  "additionalProperties": false,
  "required": ["type", "variant", "props"],
  "properties": {
    "type": {
      "type": "string",
      "enum": ["FeatureGrid.v1", "PricingCards.v1", "FAQAccordion.v1"]
    },
    "variant": { "type": "string" },
    "props": { "type": "object" },
    "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
    "notes": {
      "type": "array",
      "items": { "type": "string" },
      "maxItems": 8
    }
  }
}
