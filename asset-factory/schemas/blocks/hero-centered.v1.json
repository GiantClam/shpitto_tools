{
  "$id": "https://yourdomain/schema/blocks/hero-centered.v1.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "HeroCentered.v1",
  "type": "object",
  "additionalProperties": false,
  "required": ["props"],
  "properties": {
    "props": {
      "allOf": [
        { "$ref": "../base-block-props.json#/$defs/BaseBlockProps" },
        {
          "type": "object",
          "additionalProperties": false,
          "required": ["title", "ctas"],
          "properties": {
            "eyebrow": { "type": "string" },
            "title": { "type": "string", "minLength": 1 },
            "subtitle": { "type": "string" },
            "ctas": {
              "type": "array",
              "minItems": 1,
              "maxItems": 2,
              "items": {
                "$ref": "../base-block-props.json#/$defs/Link"
              }
            },
            "media": {
              "type": "object",
              "additionalProperties": false,
              "required": ["kind", "src"],
              "properties": {
                "kind": { "type": "string", "enum": ["image", "video"] },
                "src": {
                  "type": "string",
                  "pattern": "^/assets/[^\\s]+$"
                },
                "alt": { "type": "string" }
              }
            },
            "badges": {
              "type": "array",
              "maxItems": 6,
              "items": {
                "type": "object",
                "additionalProperties": false,
                "required": ["text"],
                "properties": {
                  "text": { "type": "string" }
                }
              }
            },
            "headingSize": { "type": "string", "enum": ["sm", "md", "lg"] },
            "bodySize": { "type": "string", "enum": ["sm", "md", "lg"] }
          }
        }
      ]
    },
    "variant": {
      "type": "string",
      "enum": ["textOnly", "withMedia", "withBadges"],
      "default": "textOnly"
    }
  }
}
