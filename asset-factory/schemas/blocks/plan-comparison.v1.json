{
  "$id": "https://yourdomain/schema/blocks/plan-comparison.v1.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "PlanComparison.v1",
  "type": "object",
  "additionalProperties": false,
  "required": ["props"],
  "properties": {
    "props": {
      "allOf": [
        { "$ref": "../base-block-props.json#/$defs/BaseBlockProps" },
        {
          "type": "object",
          "additionalProperties": false,
          "required": ["plans", "features"],
          "properties": {
            "title": { "type": "string" },
            "plans": {
              "type": "array",
              "minItems": 2,
              "maxItems": 4,
              "items": { "type": "string", "minLength": 1 }
            },
            "features": {
              "type": "array",
              "minItems": 3,
              "maxItems": 30,
              "items": {
                "type": "object",
                "additionalProperties": false,
                "required": ["label", "availability"],
                "properties": {
                  "label": { "type": "string" },
                  "availability": {
                    "type": "array",
                    "items": { "type": "boolean" },
                    "minItems": 2,
                    "maxItems": 4
                  }
                }
              }
            }
          }
        }
      ]
    },
    "variant": {
      "type": "string",
      "enum": ["table"],
      "default": "table"
    }
  }
}
