{
  "$id": "https://yourdomain/schema/blocks/hero-split.v1.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "HeroSplit.v1",
  "type": "object",
  "additionalProperties": false,
  "required": ["props"],
  "properties": {
    "props": {
      "allOf": [
        { "$ref": "../base-block-props.json#/$defs/BaseBlockProps" },
        {
          "type": "object",
          "additionalProperties": false,
          "required": ["title", "ctas", "mediaPosition"],
          "properties": {
            "eyebrow": { "type": "string" },
            "title": { "type": "string", "minLength": 1 },
            "subtitle": { "type": "string" },
            "ctas": {
              "type": "array",
              "minItems": 1,
              "maxItems": 2,
              "items": { "$ref": "../base-block-props.json#/$defs/Link" }
            },
            "media": {
              "type": "object",
              "additionalProperties": false,
              "required": ["kind", "src"],
              "properties": {
                "kind": { "type": "string", "enum": ["image", "video"] },
                "src": { "type": "string", "pattern": "^/assets/[^\\s]+$" },
                "alt": { "type": "string" }
              }
            },
            "mediaPosition": { "type": "string", "enum": ["left", "right"] }
            ,
            "headingSize": { "type": "string", "enum": ["sm", "md", "lg"] },
            "bodySize": { "type": "string", "enum": ["sm", "md", "lg"] }
          }
        }
      ]
    },
    "variant": {
      "type": "string",
      "enum": ["image", "video", "screenshot"],
      "default": "image"
    }
  }
}
