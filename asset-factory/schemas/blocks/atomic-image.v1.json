{
  "$id": "https://yourdomain/schema/blocks/atomic-image.v1.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "AtomicImage.v1",
  "type": "object",
  "additionalProperties": false,
  "required": ["props"],
  "properties": {
    "props": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "src"],
      "properties": {
        "id": { "type": "string", "minLength": 1 },
        "src": { "type": "string", "minLength": 1 },
        "alt": { "type": "string" },
        "width": { "type": "number" },
        "height": { "type": "number" },
        "rounded": { "type": "boolean" }
      }
    }
  }
}
