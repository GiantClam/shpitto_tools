ANTHROPIC_API_KEY=your-api-key
AIBERM_API_KEY=your-aiberm-key
LLM_PROVIDER=aiberm
# Balanced recommendation: keep aiberm first, allow full provider fallback
LLM_PROVIDER_ORDER=aiberm,openrouter,anthropic
LLM_CROSS_PROVIDER_FALLBACK=all
# Keep fallback model aligned to avoid expensive model switches
LLM_MODEL_FALLBACK=anthropic/claude-sonnet-4.5
# Balanced (dev) retry profile: fail fast on non-network errors
LLM_RETRY_MODE=network_only
LLM_SECTION_MAX_ATTEMPTS=1
LLM_NETWORK_RETRY_ATTEMPTS=1
LLM_ENABLE_REPAIR=false
LLM_ENABLE_REFINEMENT=false
OPENROUTER_API_KEY=your-openrouter-key
PROXY_URL=http://127.0.0.1:7890
GOOGLE_SEARCH_API_KEY=your-google-search-key
GOOGLE_SEARCH_ENGINE_ID=your-search-engine-id
JINA_API_KEY=your-jina-api-key
