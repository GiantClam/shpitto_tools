ANTHROPIC_API_KEY=your-api-key
AIBERM_API_KEY=your-aiberm-key
LLM_PROVIDER=aiberm
# Primary/fallback model aliases (logical model used by orchestration)
LLM_MODEL=claude-sonnet-4-5-20250929
LLM_MODEL_FALLBACK=claude-opus-4-5-20251101
# Provider-specific model mapping (recommended when provider model IDs differ)
LLM_MODEL_AIBERM=claude-sonnet-4-5-20250929
LLM_MODEL_FALLBACK_AIBERM=claude-opus-4-5-20251101
LLM_MODEL_OPENROUTER=anthropic/claude-sonnet-4.5
LLM_MODEL_FALLBACK_OPENROUTER=anthropic/claude-opus-4.5
OPENROUTER_MODEL=anthropic/claude-sonnet-4.5
OPENROUTER_MODEL_FALLBACK=anthropic/claude-opus-4.5
# Balanced recommendation: keep aiberm first, allow full provider fallback
LLM_PROVIDER_ORDER=aiberm,openrouter,anthropic
LLM_CROSS_PROVIDER_FALLBACK=all
# Balanced (dev) retry profile: fail fast on non-network errors
LLM_RETRY_MODE=network_only
LLM_SECTION_MAX_ATTEMPTS=1
LLM_NETWORK_RETRY_ATTEMPTS=1
LLM_ENABLE_REPAIR=false
LLM_ENABLE_REFINEMENT=false
BUILDER_USE_COMPACT_DESIGN_SYSTEM_PROMPT=true
BUILDER_PROMPT_USER_MAX_CHARS=420
# Section generation strategy:
# - llm_first: always try LLM first (only recover to template when hint templatePreferred=true)
# - hybrid: template-first for configured variants/section tokens, LLM-first for others
# - template_first: all sections use local template variants first
BUILDER_SECTION_GENERATION_STRATEGY=hybrid
# Comma-separated section token matcher for template routing (matches section type/id text)
BUILDER_TEMPLATE_SECTIONS=footercta,footer-cta,cta,socialproof,social-proof,testimonial,trustlogo,navigation,footer
# Comma-separated section token matcher for LLM routing (takes precedence over template routing)
BUILDER_LLM_SECTIONS=hero,studiostory,story,showcase
# Backward-compatible alias (optional): BUILDER_TEMPLATE_FIRST_SECTIONS
BUILDER_TEMPLATE_FIRST_SECTIONS=footercta,footer-cta,cta,socialproof,social-proof,testimonial,trustlogo
# Variant matcher based on local fallback templates: content|catalog|contact|cta|socialproof
BUILDER_TEMPLATE_FIRST_VARIANTS=cta,socialproof,contact,catalog
# Failure types that should recover to template immediately: parse|layout|network|unknown
BUILDER_TEMPLATE_RECOVERY_FAILURE_TYPES=parse,layout
# Optional: when true, still run LLM for template-first sections but keep template output (for shadow evaluation)
BUILDER_TEMPLATE_SHADOW_RUN=false
# Optional external template library path (auto-generated by template-factory)
# BUILDER_TEMPLATE_LIBRARY_PATH=template-factory/library/style-profiles.generated.json
OPENROUTER_API_KEY=your-openrouter-key
PROXY_URL=http://127.0.0.1:7890
GOOGLE_SEARCH_API_KEY=your-google-search-key
GOOGLE_SEARCH_ENGINE_ID=your-search-engine-id
JINA_API_KEY=your-jina-api-key
